<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4TheLocalandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#BAB6B6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.4TheLocalandroid">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="BeatsButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="iconGravity">textStart</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="ButtonStyleEnable" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/btn_continue_bg</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>